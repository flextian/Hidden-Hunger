#:import Factory kivy.factory.Factory


<UIManager>:
    loading_popup: Factory.LoadingPopup()

    MainScreen:
    ResultsScreen:
    InfoScreen:

<LoadingPopup@MDDialog>:
    title: "Loading..."
    size_hint: 0.8, 0.3

<Screen>:
    on_enter: root.manager.loading_popup.dismiss()
    on_pre_leave: root.manager.loading_popup.open()