<MainScreen>:
    name: "main_screen"
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, 0.7
            MDLabel:
                font_size: self.height / 3
                text: "Hidden Hunger"
                font_style: 'H1'
                halign: 'center'
        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 0.7
                spacing: dp(8)
                AnchorLayout:
                    MDLabel:
                        font_size: self.height
                        text: 'Enter Your Zip Code:'
                        font_style: 'H3'
                        halign: 'center'
                        font_size: self.height / 2
                AnchorLayout:
                    MDTextField:
                        hint_text: "Zip Code"
                        mode: "rectangle"
                        id: zip_code
                        input_filter: 'int'
                        size_hint: 0.8, None
                        max_text_length: 5
                AnchorLayout:
                    MDRaisedButton:
                        size_hint: 0.6, 1
                        elevation_normal: 2
                        opposite_colors: True
                        pos_hint: {'center_x': .5}
                        text: 'Submit'
                        on_release:
                            root.get_results()

        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 0.5
                MDLabel:
                    font_style: 'H3'
                    theme_text_color: 'Primary'
                    halign: 'center'
                    font_size: self.height / 3
                    text: 'Distance (in miles):'
                MDDropDownItem:
                    id: distance
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'All'
                    on_release: root.open_dropdown()