<MainScreen>:
    name: "main_screen"
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, 0.7
            Label:
                font_size: self.height / 4
                text: "Hidden Hunger"
        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 0.7
                spacing: dp(8)
                AnchorLayout:
                    Label:
                        font_size: self.height
                        text: 'Zip Code:'
                AnchorLayout:
                    TextInput:
                        id: zip_code
                AnchorLayout:
                    Button:
                        size_hint: 0.5, 1
                        text: 'Submit'
                        on_release: root.manager.current = "map_screen"

        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 0.5
                Label:
                    font_size: self.height / 3
                    text: 'Distance (in miles):'
                Spinner:
                    text: '5'
                    values: '5', '15', '30', '50'